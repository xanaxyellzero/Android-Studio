<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:textStyle="bold"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Hello Toast"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/tmblToast"
        android:onClick="ToastClick"
        android:layout_width="match_parent"
        android:background="@color/biru"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="TOAST"
        android:layout_height="wrap_content"
        tools:ignore="InvalidId" />

    <TextView
        android:id="@+id/kounter"
        android:layout_width="match_parent"
        android:text="0"
        android:textStyle="bold"
        android:background="@color/kuning"
        android:gravity="center"
        android:textSize="250dp"
        android:textColor="@color/biru"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/tmblCount"
        android:onClick="CountClick"
        android:layout_width="match_parent"
        android:background="@color/biru"
        android:textStyle="bold"
        android:textSize="25dp"
        android:text="COUNT"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caezar Brian RS"
        android:textSize="25dp"
        android:background="@color/kuning"
        android:textColor="@color/biru"
        android:textStyle="bold"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A11.2019.12272"
        android:textSize="25dp"
        android:background="@color/kuning"
        android:textColor="@color/biru"
        android:textStyle="bold"
        android:gravity="center"/>

</LinearLayout>