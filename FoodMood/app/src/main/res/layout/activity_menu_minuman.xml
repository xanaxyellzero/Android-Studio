<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/bluez"
    android:layout_height="match_parent"
    tools:context=".MenuMinuman">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:id="@+id/iconBack"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:onClick="BACK"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/lingkaran"
            android:src="@drawable/ic_baseline_arrow_back_ios_new_24"/>

        <View
            android:layout_width="310dp"
            android:layout_height="0dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/lingkaran"
            android:src="@drawable/ic_baseline_search_24"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded"/>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@color/whitez"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="-640dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Creamy Ice Choco"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 22.999"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/greyz"
                    android:layout_gravity="right"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <Button
                        android:id="@+id/minbtn1"
                        android:onClick="minclick1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textColor="@color/yellowz"
                        android:text="-"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:id="@+id/kounter1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/rounded_txt"
                        android:textColor="@color/greenz"
                        android:text="0"
                        android:textAlignment="center"/>

                    <Button
                        android:id="@+id/plusbtn1"
                        android:onClick="plusclick1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textColor="@color/yellowz"
                        android:text="+"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/minum1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@color/whitez"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Taro Latte"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 27.999"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/greyz"
                    android:layout_gravity="right"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <Button
                        android:id="@+id/minbtn2"
                        android:onClick="minclick2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textColor="@color/yellowz"
                        android:text="-"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:id="@+id/kounter2"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/rounded_txt"
                        android:textColor="@color/greenz"
                        android:text="0"
                        android:textAlignment="center"/>

                    <Button
                        android:id="@+id/plusbtn2"
                        android:onClick="plusclick2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textColor="@color/yellowz"
                        android:text="+"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/minum2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:background="@color/whitez"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="23dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Velvet Latte"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="right"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="IDR 25.999"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/greyz"
                    android:layout_gravity="right"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <Button
                        android:id="@+id/minbtn3"
                        android:onClick="minclick3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textColor="@color/yellowz"
                        android:text="-"
                        android:layout_marginLeft="30dp"/>

                    <TextView
                        android:id="@+id/kounter3"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/rounded_txt"
                        android:textColor="@color/greenz"
                        android:text="0"
                        android:textAlignment="center"/>

                    <Button
                        android:id="@+id/plusbtn3"
                        android:onClick="plusclick3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:textColor="@color/yellowz"
                        android:text="+"
                        android:layout_marginLeft="5dp"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/minum3"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:background="@color/whitez"
        app:cardCornerRadius="25dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <Spinner
                    android:id="@+id/bayar"
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Item  : "
                        android:textSize="23dp"
                        android:fontFamily="sans-serif-medium"/>

                    <TextView
                        android:id="@+id/txt_item"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left"
                        android:text="0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Total : Rp"
                        android:textSize="23dp"/>

                    <TextView
                        android:id="@+id/txt_price"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="23dp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="left"
                        android:text="0"/>
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/iconCart"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:onClick="CART"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/rounded_btn"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>